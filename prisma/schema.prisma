// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id       Int    @id @default(autoincrement())
  email    String @unique @db.VarChar(255)
  password String @db.VarChar(255)
  role     Role   @default(USER)
  refresh String @unique @default(uuid())
  exercise Exercise[]
  training Training[]
}

model MuscleGroup {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String?
  muscleGroups    ExerciseMuscleGroup[] 
}

model Exercise {
  id            Int         @id @default(autoincrement())
  name          String
  description   String
  muscleGroups    ExerciseMuscleGroup[]
  training      TrainingExercise[]
  userId        Int? // Nullable relation to User
  createdBy     User?       @relation(fields: [userId], references: [id])

  @@index([userId]) // Optional: Improves query performance on the userId field
}

model Training {
  id            Int         @id @default(autoincrement())
  name          String
  description   String
  exercises    TrainingExercise[]
  userId        Int? // Nullable relation to User
  createdBy     User?       @relation(fields: [userId], references: [id])

  @@index([userId]) // Optional: Improves query performance on the userId field
}

// Join table for the many-to-many relationship between Exercise and MuscleGroup
model ExerciseMuscleGroup {
  exerciseId   Int
  muscleGroupId Int
  exercise     Exercise  @relation(fields: [exerciseId], references: [id])
  muscleGroup  MuscleGroup @relation(fields: [muscleGroupId], references: [id])

  @@id([exerciseId, muscleGroupId])
}

// Join table for the many-to-many relationship between Training and Exercise
model TrainingExercise {
  id            Int         @id @default(autoincrement())
  exerciseId   Int
  trainingId   Int
  sets               Set[] 
  restAfterExercise Int @default(0)
  exercise     Exercise  @relation(fields: [exerciseId], references: [id])
  training     Training @relation(fields: [trainingId], references: [id])
}

model Set {
  id                 Int     @id @default(autoincrement())
  weight             Int
  rest               Int
  reps               Int    @default(0)
  trainingExerciseId Int
  trainingExercise   TrainingExercise @relation(fields: [trainingExerciseId], references: [id])

  @@index([trainingExerciseId]) // Improves query performance
}


enum Role {
  USER
  ADMIN
}